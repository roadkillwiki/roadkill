@model IEnumerable<WysiwygButtonViewModel>

<div id="wysiwyg-toolbar" class="btn-toolbar" role="toolbar">
	<div class="btn-group btn-group-sm" role="toolbar">
		<button tabindex="4" class="btn btn-default wysiwyg-bold" data-container="body" data-toggle="popover" data-placement="top" data-content="@SiteStrings.EditPage_Toolbar_Bold"><strong>B</strong></button>
		<button tabindex="4" class="btn btn-default wysiwyg-italic" data-container="body" data-toggle="popover" data-placement="top" data-content="@SiteStrings.EditPage_Toolbar_Italic"><em>I</em></button>
		<button tabindex="4" class="btn btn-default wysiwyg-underline" data-container="body" data-toggle="popover" data-placement="top" data-content="@SiteStrings.EditPage_Toolbar_Underline"><u>U</u></button>
		<button tabindex="4" class="btn btn-default wysiwyg-h2" data-container="body" data-toggle="popover" data-placement="top" data-content="@SiteStrings.EditPage_Toolbar_Heading2">H2</button>
		<button tabindex="4" class="btn btn-default wysiwyg-h3" data-container="body" data-toggle="popover" data-placement="top" data-content="@SiteStrings.EditPage_Toolbar_Heading3">H3</button>
		<button tabindex="4" class="btn btn-default wysiwyg-h4" data-container="body" data-toggle="popover" data-placement="top" data-content="@SiteStrings.EditPage_Toolbar_Heading4">H4</button>
		<button tabindex="4" class="btn btn-default wysiwyg-h5" data-container="body" data-toggle="popover" data-placement="top" data-content="@SiteStrings.EditPage_Toolbar_Heading5">H5</button>
		<button tabindex="4" class="btn btn-default wysiwyg-bullets" data-container="body" data-toggle="popover" data-placement="top" data-content="@SiteStrings.EditPage_Toolbar_BulletList"><span class="glyphicon glyphicon-th-list"></span></button>
		<button tabindex="4" class="btn btn-default wysiwyg-picture" data-container="body" data-toggle="popover" data-placement="top" data-content="@SiteStrings.EditPage_Toolbar_Image"><span class="glyphicon glyphicon-picture"></span></button>
		<button tabindex="4" class="btn btn-default wysiwyg-link" data-container="body" data-toggle="popover" data-placement="top" data-content="@SiteStrings.EditPage_Toolbar_Link"><span class="glyphicon glyphicon-link"></span></button>
		<button tabindex="4" class="btn btn-default wysiwyg-help" data-container="body" data-toggle="popover" data-placement="top" data-content="@SiteStrings.EditPage_Toolbar_Help"><span class="glyphicon glyphicon-info-sign"></span></button>
		@foreach (var button in Model)
        {
            <button tabindex="4" class="btn btn-default @button.Id" data-container="body" data-toggle="popover" data-placement="top" data-content="@button.Title">
                @if (!String.IsNullOrWhiteSpace(button.Glyph))
                {
                    <span class="glyphicon @button.Glyph"></span>
                }
                @button.Name
            </button>
        }
	</div>
	<div class="btn-group btn-group-sm pull-right" role="toolbar">
		<button tabindex="4" class="btn btn-default" id="preview-toggle" data-container="body" data-toggle="popover" data-placement="top" data-content="@SiteStrings.EditPage_Preview"><span class="glyphicon glyphicon-chevron-right"></span></button>
	</div>
</div>