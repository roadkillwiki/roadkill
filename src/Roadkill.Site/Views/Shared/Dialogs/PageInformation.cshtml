@model PageSummary

<div class="modal hide" id="pageinformation">
	<div class="modal-header">
		<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
		<h2 class="default-header">@Model.Title</h2>
	</div>

	<div class="modal-body">
		<div class="tags">
			@Html.TagBlocks(Model.Tags)
		</div>
		<br class="clear" />

		<div class="left">
			<b>@SiteStrings.Page_Info_CreatedOn</b><br />
			@Model.CreatedOn<br /><br />

			<b>@SiteStrings.Page_Info_CreatedBy</b><br />
			@Model.CreatedBy
		</div>

		<div class="right">
			<b>@SiteStrings.Page_Info_ModifiedOn</b><br />
			@Model.ModifiedOn<br /><br />

			<b>@SiteStrings.Page_Info_ModifiedBy</b><br />
			@Model.ModifiedBy
		</div>
	</div>

	<div class="modal-footer">
		<a href="#" data-dismiss="modal" class="btn btn-primary">Close</a>
	</div>
</div>