@using Roadkill.Core.Configuration;
@model IList<IEnumerable<UserSummary>>
@{ 
	ViewBag.Title = SiteStrings.SiteSettings_Users_Title;
}
<h1>@SiteStrings.SiteSettings_Users_Title</h1>

@Html.Partial("SettingsMenu")

<div id="settings" class="blueborder rounded5">
	<p>
		<b>@SiteStrings.SiteSettings_Users_AD_Title</b><br />
		@SiteStrings.SiteSettings_Users_AD_Label1
	</p>
	
	<p>
		@SiteStrings.SiteSettings_Users_AD_Label2
	</p>
	
	<h2>@SiteStrings.SiteSettings_Users_Admins (@Configuration.ApplicationSettings.AdminRoleName)</h2>
	<table class="settingstable">
		@foreach (UserSummary user in Model[0])
		{
		<tr>
			<td class="title">@user.ExistingEmail</td>
		</tr>
		}
	</table>
	<br class="clear" />

	<h2>@SiteStrings.SiteSettings_Users_Editors (@Configuration.ApplicationSettings.EditorRoleName)</h2>
	<table class="settingstable">
	@foreach (UserSummary user in Model[1])
	{
		<tr>
			<td class="title">@user.ExistingEmail</td>
		</tr>
	}
	</table>
	<br class="clear" />
</div>